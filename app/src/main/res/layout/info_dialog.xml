            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="left|center"
                android:text="Safety"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen" />


