<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <LinearLayout
        android:id="@+id/llPhotoBlogs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="9">

            <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ivProPicPhotoBlog"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/chatting"
                app:riv_border_color="@color/transparent"
                app:riv_border_width="2dip"
                app:riv_corner_radius="10dip"
                app:riv_mutate_background="true"
                app:riv_oval="false" />


            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="@dimen/hundrad"
                android:layout_height="@dimen/twenty_five"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:background="@drawable/transparent_bg"
                android:gravity="center"
                android:text="Mr.Ahmed"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:weightSum="12">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="0.5" />

                <TextView
                    android:id="@+id/tvView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_bg"
                    android:gravity="center"
                    android:text="View"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="6" />

                <TextView
                    android:id="@+id/tvComment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_bg"
                    android:gravity="center"
                    android:text="Comment"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="0.5" />

                <TextView
                    android:id="@+id/tvLove"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_bg"
                    android:gravity="center"
                    android:text="Love"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="0.5" />
                <TextView
                    android:id="@+id/tvLike"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="1"
                    android:background="@drawable/transparent_bg"
                    android:gravity="center"
                    android:text="Like"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="0.5" />


            </LinearLayout>


        </RelativeLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Name Title" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>