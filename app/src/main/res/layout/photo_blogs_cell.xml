<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/ten"
        app:elevation="3dp">

        <LinearLayout
            android:id="@+id/llPhotoBlogs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="170dp"
                android:layout_height="250dp">

                <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/ivProPicPhotoBlog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/chatting"
                    app:riv_border_color="@color/transparent"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty"
                    android:layout_alignParentBottom="true"
                    android:background="@color/photo_blogs_transparent"
                    android:orientation="horizontal"
                    android:weightSum="21">


                    <View
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civProfilePhotoBlogs"
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:padding="@dimen/three"
                        android:layout_weight="5"
                        android:src="@mipmap/anisul" />

                    <LinearLayout
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@color/transparent"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/view_white" />

                        <TextView
                            android:id="@+id/tvView"
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="39"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ten"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@color/transparent"
                            android:padding="@dimen/five"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/comment_white" />

                        <TextView
                            android:id="@+id/tvComment"
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="19"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ten"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <ImageView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@color/transparent"
                            android:padding="@dimen/five"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/love_white" />

                        <TextView
                            android:id="@+id/tvLike"
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="14"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ten"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <View
                        android:layout_width="@dimen/zero"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5" />


                </LinearLayout>


            </RelativeLayout>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:background="@drawable/photo_blogs_title_bg"
                android:gravity="left"
                android:maxLines="3"
                android:padding="@dimen/five"
                android:text="Name Title"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen" />


        </LinearLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>