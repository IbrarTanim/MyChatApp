<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="24">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="2">


            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/thirty"
                android:layout_marginRight="@dimen/thirty"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:elevation="5dp"
                card_view:cardElevation="5dp"
                card_view:cardPreventCornerOverlap="false">

            </android.support.v7.widget.CardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/chatting"
                    app:riv_border_color="@color/transparent"
                    app:riv_corner_radius_bottom_left="@dimen/twenty"
                    app:riv_corner_radius_bottom_right="@dimen/twenty"
                    app:riv_mutate_background="true"
                    app:riv_oval="false" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/thirty"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="Samnata's Photo Blogs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/eighteen"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/forty"
                    android:layout_height="@dimen/forty"
                    android:layout_marginTop="@dimen/thirty"
                    android:background="@color/transparent"
                    android:padding="@dimen/ten"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_back_button" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:layout_alignParentBottom="true"
                android:background="@drawable/profile_third_bottom_bg"
                android:orientation="horizontal"
                android:weightSum="19">


                <View
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="3" />

                <LinearLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="Liked"
                        android:textColor="@color/chat_text_color"
                        android:textSize="@dimen/twelve"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="485"
                            android:textColor="@color/chat_text_color"
                            android:textSize="@dimen/fifteen"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@color/transparent"
                            android:padding="@dimen/five"
                            android:scaleType="fitStart"
                            android:src="@drawable/ic_profile_one_liked_me" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Visited me"
                        android:textColor="@color/black"
                        android:textSize="@dimen/twelve"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="Favorited"
                        android:textColor="@color/chat_text_color"
                        android:textSize="@dimen/twelve"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="485"
                            android:textColor="@color/chat_text_color"
                            android:textSize="@dimen/fifteen"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@color/transparent"
                            android:padding="@dimen/five"
                            android:scaleType="fitStart"
                            android:src="@drawable/ic_profile_one_favorite_me" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Visited me"
                        android:textColor="@color/black"
                        android:textSize="@dimen/twelve"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="Visited"
                        android:textColor="@color/chat_text_color"
                        android:textSize="@dimen/twelve"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="485"
                            android:textColor="@color/chat_text_color"
                            android:textSize="@dimen/fifteen"
                            android:textStyle="normal" />

                        <ImageView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@color/transparent"
                            android:padding="@dimen/five"
                            android:scaleType="fitStart"
                            android:src="@drawable/ic_profile_one_visited_me" />
                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Visited me"
                        android:textColor="@color/black"
                        android:textSize="@dimen/twelve"
                        android:textStyle="bold" />


                </LinearLayout>

                <View
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="@dimen/ten"
                android:scaleType="fitStart"
                android:src="@mipmap/bell_icon" />

            <View
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <ImageView
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="@dimen/ten"
                android:scaleType="fitEnd"
                android:src="@mipmap/add_photo_black" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvUserPhotoBlogs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="20"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            android:scrollbars="none" />


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>