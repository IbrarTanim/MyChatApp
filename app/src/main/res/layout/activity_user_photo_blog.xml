<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="24">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="6">

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:layout_marginLeft="@dimen/thirty"
                    android:layout_marginRight="@dimen/thirty"
                    android:layout_marginBottom="@dimen/ten"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="0.0px"
                    android:elevation="5dp"
                    card_view:cardElevation="5dp"
                    card_view:cardPreventCornerOverlap="false">

                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="290dp"
                    android:elevation="8dp"
                    android:orientation="vertical"
                    android:weightSum="10">


                    <RelativeLayout
                        android:id="@+id/rlPhotoOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="8">

                        <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/chatting"
                            app:riv_border_color="@color/transparent"
                            app:riv_corner_radius_bottom_left="@dimen/twenty"
                            app:riv_corner_radius_bottom_right="@dimen/twenty"
                            app:riv_mutate_background="true"
                            app:riv_oval="false" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/forty"
                            android:layout_marginTop="@dimen/thirty"
                            android:orientation="horizontal"
                            android:weightSum="10">


                            <ImageView
                                android:layout_width="@dimen/zero"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="@dimen/five"
                                android:background="@color/transparent"
                                android:scaleType="fitCenter"
                                android:src="@android:drawable/ic_menu_close_clear_cancel" />


                            <TextView
                                android:layout_width="@dimen/zero"
                                android:layout_height="match_parent"
                                android:layout_weight="8"
                                android:gravity="center|left"
                                android:layout_marginLeft="@dimen/ten"
                                android:shadowColor="@color/black"
                                android:shadowDx="5"
                                android:shadowDy="5"
                                android:shadowRadius="5"
                                android:text="Samanta's Photo"
                                android:textColor="@color/white"
                                android:textSize="@dimen/eighteen"
                                android:textStyle="bold" />


                            <ImageView
                                android:layout_width="@dimen/zero"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="@dimen/five"
                                android:background="@color/transparent"
                                android:scaleType="fitCenter"
                                android:src="@mipmap/bell_icon" />

                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="2"
                        android:orientation="horizontal"
                        android:weightSum="19">

                        <View
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="2" />

                        <LinearLayout
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="LIKED"
                                android:textColor="@color/chat_text_color"
                                android:textSize="@dimen/twelve"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="1"
                                android:gravity="center|top"
                                android:text="485"
                                android:textColor="@color/chat_text_color"
                                android:textSize="@dimen/fifteen"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="COMMENTED"
                                android:textColor="@color/chat_text_color"
                                android:textSize="@dimen/twelve"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="1"
                                android:gravity="center|top"
                                android:text="385"
                                android:textColor="@color/chat_text_color"
                                android:textSize="@dimen/fifteen"
                                android:textStyle="normal" />



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="VIEWED"
                                android:textColor="@color/chat_text_color"
                                android:textSize="@dimen/twelve"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/zero"
                                android:layout_weight="1"
                                android:gravity="center|top"
                                android:text="485"
                                android:textColor="@color/chat_text_color"
                                android:textSize="@dimen/fifteen"
                                android:textStyle="normal" />





                        </LinearLayout>

                        <View
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="2" />

                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvUserPhotoBlogs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginRight="@dimen/five"
                android:layout_weight="18"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                android:scrollbars="none" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civUploadPhoto"
        android:layout_width="@dimen/fifty"
        android:layout_height="@dimen/fifty"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/fifteen"
        android:layout_marginBottom="@dimen/fifteen"
        android:background="@drawable/rounded_textview"
        android:padding="@dimen/five"
        android:src="@drawable/ic_add_to_hotlist_icon" />


</RelativeLayout>


