<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="120dp">;

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="8">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civActivitiesProfilePic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/two"
                android:background="@color/transparent"
                android:src="@mipmap/chatting"
                app:civ_border_color="#E6FFFFFF" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:src="@drawable/circle_activities"
                app:civ_border_color="#E6FFFFFF" />


        </RelativeLayout>


        <TextView
            android:id="@+id/tvActivitiesName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Samanta"
            android:textColor="@color/black"
            android:textSize="@dimen/twelve"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvActivitiesTime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:gravity="center|top"
            android:text="Friday"
            android:textColor="@color/black"
            android:textSize="@dimen/ten"
            android:visibility="gone" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
