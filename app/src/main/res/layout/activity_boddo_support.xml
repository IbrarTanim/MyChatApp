<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="11">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="0.5" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="10">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/find_your_love" />

            <LinearLayout
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="7.5"
                android:orientation="vertical"
                android:weightSum="3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="2"
                    android:gravity="bottom|left"
                    android:text="Boddo team"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/zero"
                    android:layout_weight="1"
                    android:gravity="top|left"
                    android:text="Online"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="normal" />


            </LinearLayout>


            <ImageView
                android:id="@+id/ivUploadPhoto"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="@dimen/three"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />

            <View
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="9.5">

            <android.support.v7.widget.CardView
                android:id="@+id/cvPrivateChat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:elevation="5dp"
                app:cardElevation="5dp"
                app:cardPreventCornerOverlap="false">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="8.52">


                    <android.support.v4.widget.NestedScrollView
                        android:id="@+id/nsPrivateChatAlbumMain"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="8">

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/twenty">


                            <RelativeLayout
                                android:id="@+id/rlTextMe"
                                android:layout_width="300dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/five"
                                android:layout_marginTop="@dimen/twenty"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/thirty"
                                    android:layout_marginBottom="@dimen/twenty"
                                    android:background="@drawable/chat_bg_me">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:gravity="left"
                                        android:paddingLeft="@dimen/forty"
                                        android:text="Iefaz"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/fifteen"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvTextMe"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/twenty"
                                        android:gravity="left"
                                        android:paddingLeft="@dimen/forty"
                                        android:paddingTop="@dimen/five"
                                        android:paddingRight="@dimen/ten"
                                        android:paddingBottom="@dimen/ten"
                                        android:text="Let's try to run your application. I assume you have connected your actual Android Mobile device with your computer. To run the app from android studio"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/fifteen" />


                                    <TextView
                                        android:layout_width="30dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentLeft="true"
                                        android:background="@drawable/making_corner_me"
                                        android:elevation="8dp" />

                                </RelativeLayout>


                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentBottom="true"
                                    android:src="@mipmap/chatting" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="bottom|right"
                                    android:text="10.50 am"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/twelve"
                                    android:textStyle="normal" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rlTextAnother"
                                android:layout_width="300dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/twenty"
                                android:layout_marginRight="@dimen/five"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/rlTextMe">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="@dimen/thirty"
                                    android:layout_marginBottom="@dimen/twenty"
                                    android:background="@drawable/chat_bg_another">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/thirty"
                                        android:gravity="center|right"
                                        android:paddingLeft="@dimen/ten"
                                        android:paddingRight="@dimen/forty"
                                        android:text="Me"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/fifteen"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tvTextAnother"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/twenty"
                                        android:gravity="left"
                                        android:paddingLeft="@dimen/ten"
                                        android:paddingTop="@dimen/five"
                                        android:paddingRight="@dimen/forty"
                                        android:paddingBottom="@dimen/ten"
                                        android:text="Let's try to run your application. I assume you have connected your actual Android Mobile device with your computer. To run the app from android studio.Let's try to run your application. I assume you have connected your actual Android Mobile device with your computer."
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/fifteen" />

                                    <TextView
                                        android:layout_width="30dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/making_corner" />

                                </RelativeLayout>

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:src="@mipmap/find_friends" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="left|bottom"
                                    android:text="20.50 pm"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/twelve"
                                    android:textStyle="normal" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rlTextMeSecond"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/five"
                                android:layout_marginTop="@dimen/twenty"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/rlTextAnother">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/thirty"
                                    android:layout_marginBottom="@dimen/twenty"
                                    android:background="@drawable/chat_bg_me">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/thirty"
                                        android:gravity="left"
                                        android:paddingLeft="@dimen/forty"
                                        android:paddingRight="@dimen/ten"
                                        android:text="Farabi"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/fifteen"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/twenty"
                                        android:gravity="left"
                                        android:paddingLeft="@dimen/forty"
                                        android:paddingTop="@dimen/five"
                                        android:paddingRight="@dimen/ten"
                                        android:paddingBottom="@dimen/ten"
                                        android:text="Hello"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/fifteen" />


                                    <TextView
                                        android:layout_width="30dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentLeft="true"
                                        android:background="@drawable/making_corner_me"
                                        android:elevation="8dp" />

                                </RelativeLayout>


                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentBottom="true"
                                    android:src="@mipmap/anisul" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="bottom|right"
                                    android:text="18.40 pm"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/twelve"
                                    android:textStyle="normal" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/rlTextAnotherSecond"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/twenty"
                                android:layout_marginRight="@dimen/five"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/rlTextMeSecond">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginRight="@dimen/thirty"
                                    android:layout_marginBottom="@dimen/twenty"
                                    android:background="@drawable/chat_bg_another">


                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/thirty"
                                        android:gravity="left"
                                        android:paddingLeft="@dimen/ten"
                                        android:paddingRight="@dimen/forty"
                                        android:text="Me"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/fifteen"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/twenty"
                                        android:gravity="left"
                                        android:paddingLeft="@dimen/ten"
                                        android:paddingTop="@dimen/five"
                                        android:paddingRight="@dimen/forty"
                                        android:paddingBottom="@dimen/ten"
                                        android:text="Hi"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/fifteen" />

                                    <TextView
                                        android:layout_width="30dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/making_corner" />

                                </RelativeLayout>

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:src="@mipmap/find_your_love" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="bottom|left"
                                    android:text="9.26 am"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/twelve"
                                    android:textStyle="normal" />


                            </RelativeLayout>


                        </android.support.constraint.ConstraintLayout>


                    </android.support.v4.widget.NestedScrollView>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_weight="0.02"
                        android:background="@color/message_text_color" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/zero"
                        android:layout_margin="@dimen/five"
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <EditText
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/ten"
                            android:layout_weight="8"
                            android:background="@null"
                            android:hint="Share your issues"
                            android:inputType="textNoSuggestions"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="@dimen/fifteen" />


                        <ImageView
                            android:layout_width="@dimen/zero"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@color/transparent"
                            android:src="@mipmap/send_icon" />


                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>