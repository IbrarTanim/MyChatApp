<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/ten"
        android:orientation="vertical"
        android:weightSum="11">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="0.4" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:weightSum="10">


            <TextView
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:gravity="center|left"
                android:text="Recovery account"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/ivUploadPhoto"
                android:layout_width="@dimen/zero"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:padding="@dimen/three"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="10"
            android:orientation="vertical"
            android:weightSum="15">


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginRight="@dimen/fifteen"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Email"
                android:inputType="textNoSuggestions"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/eighteen" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginRight="@dimen/fifteen"
                android:layout_weight="0.03"
                android:background="@color/gray" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:layout_weight="1"
                android:gravity="center"
                android:text="We will send a verification email."
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Please open the link that email within 24 hours to access your account and create a new password."
                android:textColor="@color/gray"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:layout_weight="2"
                android:gravity="center"
                android:text="If you don't receive and email in 20 minutes please contact us at support@boddo.net explaining the situation and we will assist you."
                android:textColor="@color/gray"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="6.5" />


            <TextView
                android:layout_width="@dimen/hundred_fifty"
                android:layout_height="@dimen/zero"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/gradientbackground"
                android:gravity="center"
                android:text="Done"
                android:textColor="@color/white"
                android:textSize="@dimen/eighteen"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight="0.5" />


        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>