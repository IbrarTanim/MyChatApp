<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rokan.mychat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/chats"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.PhotoBlocksActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.OnlyStatusBar" />
        <activity
            android:name=".activities.LandingActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.OnlyStatusBar" />
        <activity
            android:name=".activities.RegistrationActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.OnlyStatusBar" />
        <activity android:name=".dialog.ForgetPasswordDialog" />
        <activity android:name=".dialog.InfoDialog" />
        <activity
            android:name=".activities.ListActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.OnlyStatusBar" />
        <activity
            android:name=".activities.MainActivity"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.OnlyStatusBar" />
    </application>

</manifest>